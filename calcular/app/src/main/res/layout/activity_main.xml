<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvOpcao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Selecione a operação matemática. "
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spiOpcoes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="173dp"
        app:layout_constraintEnd_toEndOf="@+id/tvOpcao"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toStartOf="@+id/tvOpcao"
        app:layout_constraintTop_toBottomOf="@+id/tvOpcao" />

    <ImageView
        android:id="@+id/imgvSoma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        app:layout_constraintEnd_toEndOf="@+id/edtInserirNumero1"
        app:layout_constraintStart_toStartOf="@+id/edtInserirNumero1"
        app:layout_constraintTop_toBottomOf="@+id/tvOpcao"
        app:srcCompat="@drawable/ic_soma" />

    <TextView
        android:id="@+id/tvSoma"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:layout_marginTop="74dp"
        android:text="Soma"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/spiOpcoes"
        app:layout_constraintStart_toStartOf="@+id/spiOpcoes"
        app:layout_constraintTop_toBottomOf="@+id/tvOpcao" />

    <EditText
        android:id="@+id/edtInserirNumero1"
        android:layout_width="68dp"
        android:layout_height="50dp"
        android:layout_marginTop="148dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="@+id/tvSoma"
        app:layout_constraintStart_toStartOf="@+id/tvSoma"
        app:layout_constraintTop_toBottomOf="@+id/tvOpcao" />

    <EditText
        android:id="@+id/edtInserirNumero2"
        android:layout_width="68dp"
        android:layout_height="53dp"
        android:layout_marginTop="268dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/imgvSoma"
        app:layout_constraintStart_toStartOf="@+id/imgvSoma"
        app:layout_constraintTop_toBottomOf="@+id/tvOpcao" />

    <ImageView
        android:id="@+id/imgvIgual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtInserirNumero2"
        app:srcCompat="@drawable/ic_equal" />

    <EditText
        android:id="@+id/edtResultado"
        android:layout_width="75dp"
        android:layout_height="61dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/btnCalcular"
        app:layout_constraintStart_toStartOf="@+id/btnCalcular"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcular" />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Calcular"
        app:layout_constraintEnd_toEndOf="@+id/imgvIgual"
        app:layout_constraintStart_toStartOf="@+id/imgvIgual"
        app:layout_constraintTop_toBottomOf="@+id/imgvIgual" />

</androidx.constraintlayout.widget.ConstraintLayout>